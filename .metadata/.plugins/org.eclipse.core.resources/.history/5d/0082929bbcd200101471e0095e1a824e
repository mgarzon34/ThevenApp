package com.circuitos.temporal.gui.learning.model;

/**
 * Clase que define un ejercicio concreto.
 * 
 * @author Marco Antonio Garzón Palos
 * @version 1.0
 */
public class Ejercicio {
	private int id;
	private String titulo;
	private String descripcion;
	private String datosCircuito;
	private double solucionVth;
	private double solucionRth;
	private double solucionIn;
	private double solucionRn;
	private String tipoAnalisis;
	private int dificultad;
	private int nodoAnalisisA=-1;
	private int nodoAnalisisB=-1;
	
	/**
	 * Devuelve el ID del ejercicio.
	 * 
	 * @return ID del ejercicio
	 */
	public int getId() { 
		return id; 
	}
	
	/**
	 * Modifica el ID del ejercicio.
	 * 
	 * @param id nuevo
	 */
	public void setId(int id) { 
		this.id=id; 
	}
	
	/**
	 * Devuelve el título del ejercicio.
	 * 
	 * @return título del ejercicio
	 */
	public String getTitulo() { 
		return titulo; 
		
	}
	
	/**
	 * Modifica el título del ejercicio.
	 * 
	 * @param titulo nuevo
	 */
	public void setTitulo(String titulo) { 
		this.titulo=titulo; 
	}
	
	/**
	 * Devuelve la descripción del ejercicio.
	 * 
	 * @return descripción del ejercicio
	 */
	public String getDescripcion() { 
		return descripcion; 
	}
	
	/**
	 * Modifica la descripción del ejercicio.
	 * 
	 * @param descripcion nueva
	 */
	public void setDescripcion(String descripcion) { 
		this.descripcion=descripcion; 
	}
	
	/**
	 * Devuelve los datos del circuito propuesto en el ejercicio.
	 * 
	 * @return datos del circuito
	 */
	public String getDatosCircuito() { 
		return datosCircuito; 
	}
	
	/**
	 * Modifica los datos del circuito propuesto en el ejercicio.
	 * 
	 * @param datosCircuito nuevos
	 */
	public void setDatosCircuito(String datosCircuito) { 
		this.datosCircuito=datosCircuito; 
	}
	
	/**
	 * Devuelve la tensión Thevenin del ejercicio propuesto.
	 * 
	 * @return vth - tensión Thevenin del ejercicio
	 */
	public double getSolucionVth() { 
		return solucionVth; 
	}
	
	/**
	 * Modifica la solución de la  tensión Thevenin del ejercicio.
	 * 
	 * @param solucionVth - tensión Thevenin nueva
	 */
	public void setSolucionVth(double solucionVth) { 
		this.solucionVth=solucionVth; 
	}
	
	/**
	 * Devuelve la resistencia Thévenin del ejercicio propuesto.
	 * 
	 * @return rth - resistencia Thévenin del ejercicio
	 */
	public double getSolucionRth() { 
		return solucionRth; 
	}
	
	/**
	 * Modifica la resistencia Thevenin del ejercicio propuesto.
	 * 
	 * @param solucionRth - resistencia Thevenin nueva
	 */
	public void setSolucionRth(double solucionRth) { 
		this.solucionRth=solucionRth; 
	}
	
	/**
	 * Devuelve la corriente de Norton del ejercicio propuesto.
	 * 
	 * @return In - corriente de Norton del ejercicio
	 */
	public double getSolucionIn() { 
		return solucionIn; 
	}
	
	/**
	 * Modifica la corriente de Norton del ejercicio propuesto.
	 * 
	 * @param solucionIn - corriente de Norton nueva
	 */
	public void setSolucionIn(double solucionIn) { 
		this.solucionIn=solucionIn; 
	}
	
	/**
	 * Devuelve la resistencia de Norton del ejercicio propuesto.
	 * 
	 * @return Rn - resistencia de Norton del ejercicio
	 */
	public double getSolucionRn() { 
		return solucionRn; 
	}
	
	/**
	 * Modifica la resistencia de Norton del ejercicio propuesto.
	 * 
	 * @param solucionRn - resistencia de Norton nueva
	 */
	public void setSolucionRn(double solucionRn) { 
		this.solucionRn=solucionRn; 
	}
	
	/**
	 * Devuelve el nodo de análisis A.
	 * 
	 * @return nodo de análisis A
	 */
	public int getNodoAnalisisA() {
		return nodoAnalisisA;
	}
	
	/**
	 * Modifica el nodo de análisis A.
	 * 
	 * @param nodoAnalisisA
	 */
	public void setNodoAnalisisA(int nodoAnalisisA) {
		this.nodoAnalisisA=nodoAnalisisA;
	}
	
	/**
	 * Devuelve el nodo de análisis B.
	 * 
	 * @return nodoAnalisisB
	 */
	public int getNodoAnalisisB() {
		return nodoAnalisisB;
	}
	
	/**
	 * Modifica el nodo de análisis B.
	 * 
	 * @param nodoAnalisisB
	 */
	public void setNodoAnalisisB(int nodoAnalisisB) {
		this.nodoAnalisisB=nodoAnalisisB;
	}
	
	/**
	 * Indica si el ejercicio requiere análisis entre nodos específicos en 
	 * lugar de usar componentes de carga.
	 * 
	 * @return {@code true} si tiene nodos manuales, {@code false} si no
	 */
	public boolean tieneNodosManuales() {
		return nodoAnalisisA>=0 && nodoAnalisisB>=0;
	}
	
	/**
	 * Devuelve el tipo de análisis del ejercicio (Thevenin / Norton).
	 * 
	 * @return tipo de analisis (thevenin / norton)
	 */
	public String getTipoAnalisis() { 
		return tipoAnalisis; 
	}
	
	/**
	 * Modifica el tipo de análisis del ejercicio (Thevenin / Norton).
	 * 
	 * @param tipoAnalisis tipo de analisis nuevo (thevenin/norton)
	 */
	public void setTipoAnalisis(String tipoAnalisis) { 
		this.tipoAnalisis=tipoAnalisis; 
	}
	
	/**
	 * Devuelve la dificultad del ejercicio en escala del 1 al 5.
	 * 
	 * @return dificultad del ejercicio del 1 al 5
	 */
	public int getDificultad() { 
		return dificultad; 
	}
	
	/**
	 * Modifica la dificultad del ejercicio en escala del 1 al 5.
	 * 
	 * @param dificultad nueva
	 */
	public void setDificultad(int dificultad) {
		if(1<=dificultad && dificultad<=5) {
			this.dificultad=dificultad; 
		} else {
			return;
		}
	}
	
	/**
	 * Convierte a modo texto la dificultad del ejercicio.
	 * 
	 * @return dificultad en modo texto
	 */
	public String getDificultadTexto() {
		return switch(dificultad) {
			case 1 -> "Básico";
			case 2 -> "Fácil";
			case 3 -> "Intermedio";
			case 4 -> "Difícil";
			case 5 -> "Experto";
			default -> "Desconocido";
		};
	}
}
