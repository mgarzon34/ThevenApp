package com.circuitos.AnalisisCircuitos.gui.commands;

import java.util.logging.Logger;

import com.circuitos.AnalisisCircuitos.dominio.Circuito;
import com.circuitos.AnalisisCircuitos.dominio.Componente;

import javafx.scene.Parent;
import javafx.scene.layout.Pane;
import javafx.scene.layout.StackPane;

/**
 * Comando para eliminar un componente del dise침o del circuito.
 * Solo maneja componentes - los cables tienen su propio ciclo de vida independiente.
 * 
 * @author Marco Antonio Garz칩n Palos
 * @version 1.0
 */
public class RemoveCommand implements Command {
    private static final Logger logger=Logger.getLogger(RemoveCommand.class.getName());
    
    private final Circuito circuito;
    private final Componente componente;
    private final Pane zonaDibujo;
    private final StackPane componenteVisual;

    private int oldPaneIndex=-1;
    private int oldListIndex=-1;
    private boolean ejecutado=false;
    
    public RemoveCommand(Circuito circuito, Componente componente, Pane zonaDibujo, StackPane componenteVisual) {
        this.circuito=circuito;
        this.componente=componente;
        this.zonaDibujo=zonaDibujo;
        this.componenteVisual=componenteVisual;
    }

    @Override
    public void ejecutar() {
    	if(!esValido() || ejecutado) return;
    	oldPaneIndex=zonaDibujo.getChildren().indexOf(componenteVisual);
    	oldListIndex=circuito.getComponentes().indexOf(componente);
        //Solo eliminar el componente (cables independientes)
        circuito.getComponentes().remove(componente);
        zonaDibujo.getChildren().remove(componenteVisual);
        ejecutado=true;
        logger.fine("Componente eliminado: " + componente.getId());
    }

    @Override
    public void deshacer() {
    	if(!esValido() || !ejecutado) return;
    	Parent parent=componenteVisual.getParent();
    	if(parent instanceof Pane p && p!=zonaDibujo) {
    		p.getChildren().remove(componenteVisual);
    	}
    	int li=(oldListIndex<0) ? circuito.getComponentes().size()
    			: clamp(oldListIndex, 0, circuito.getComponentes().size());
    	if(!circuito.getComponentes().contains(componente)) {
    		circuito.getComponentes().add(li, componente);
    	}
    	int pi=(oldPaneIndex<0) ? zonaDibujo.getChildren().size()
    			: clamp(oldPaneIndex, 0, zonaDibujo.getChildren().size());
    	if(!zonaDibujo.getChildren().contains(componenteVisual)) {
    		zonaDibujo.getChildren().add(pi, componenteVisual);
    	}
    	ejecutado=false;
        logger.fine("Componente restaurado: " + componente.getId());
    }

    @Override
    public String getDescripcion() {
        return "Eliminar " + componente.getClass().getSimpleName();
    }
    
    @Override
    public boolean esValido() {
        //El comando es v치lido si el componente y su representaci칩n visual existen
        return componente!=null && componenteVisual!=null && 
               zonaDibujo!=null && circuito!=null;
    }
    
    /**
     * Restringe un valor entero a [min, max]
     */
    private static int clamp(int val, int min, int max) {
    	if(val<min) return min;
    	if(val>max) return max;
    	return val;
    }
}
